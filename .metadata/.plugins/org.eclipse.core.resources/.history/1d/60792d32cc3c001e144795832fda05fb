package aop_p.adv;

import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.ProceedingJoinPoint;


public class AdviceAdvice {
	
	void before(JoinPoint joinPoint) {
		System.out.println("retString: " + joinPoint.getSignature().toShortString());
	}
	
	void after(ProceedingJoinPoint joinPoint) { // around에서만 사용 가능
		System.out.println("retString: " + joinPoint.getSignature().toShortString());
	}
	
	void afterReturning(JoinPoint joinPoint) {
		System.out.println("retString: " + joinPoint.getSignature().toShortString());
	}
	
	void error(JoinPoint joinPoint) {
		
	}
	
}
