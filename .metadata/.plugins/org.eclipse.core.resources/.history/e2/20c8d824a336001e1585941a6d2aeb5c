package Student;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Student {
    
	String name;
	String subjects;
	int total, avg, rank;
	//List<Integer> scores = new ArrayList<>();
	int [] scores;

	public Student() {
		this.name = "name";
		this.subjects = "subjects";
		this.scores = scores;
		this.total = 0;
		this.avg = 0;
		this.rank = 0;
		calc();
	}
	
	// getter / setter
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getSubjects() {
		System.out.println("과목: ");
		return subjects;
	}
	public void setSubjects(String subjects) {
		this.subjects = subjects;
	}
	/*
	 * public List<Integer> getScores() { return scores; } public void
	 * setScores(List<Integer> scores) { this.scores = scores; }
	 */

	void calc() {
		total = 0;
		
		for(int score : scores) {
			total += score;
        }
	}
	
	public int getTotal() {
		return total;
	}
	public int[] getScores() {
		return scores;
	}

	public void setScores(int... scores) {
		this.scores = scores;
	}

	

	public void setTotal(int total) {
		this.total = total;
	}

	public int getAvg() {
		return avg;
	}
	public void setAvg(int avg) {		
		this.avg = avg;
		
	}
	public int getRank() {
		return rank;
	}
	public void setRank(int rank) {		
		this.rank = rank;
		
	}

	@Override
	public String toString() {
		return "Student [name=" + name + ", subjects=" + subjects + ", total=" + total + ", avg=" + avg + ", rank="
				+ rank + ", scores=" + Arrays.toString(scores) + "]";
	}
	
	
	
	
	
	


}
